<p id="notice"><%= notice %></p>

<h1>Listing Beans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Terrain</th>
      <th>Weather</th>
      <th>Cultivation</th>
      <th>Varietal</th>
      <th>Harvest</th>
      <th>Preparation</th>
      <th>Drying</th>
      <th>Roast</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beans.each do |bean| %>
      <tr>
        <td><%= bean.name %></td>
        <td><%= bean.location_id %></td>
        <td><%= bean.terrain_id %></td>
        <td><%= bean.weather_id %></td>
        <td><%= bean.cultivation_id %></td>
        <td><%= bean.varietal_id %></td>
        <td><%= bean.harvest_id %></td>
        <td><%= bean.preparation_id %></td>
        <td><%= bean.drying_id %></td>
        <td><%= bean.roast_id %></td>
        <td><%= link_to 'Show', bean %></td>
        <td><%= link_to 'Edit', edit_bean_path(bean) %></td>
        <td><%= link_to 'Destroy', bean, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

