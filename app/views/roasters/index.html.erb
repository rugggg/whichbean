<p id="notice"><%= notice %></p>

<h1>Listing Roasters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Country</th>
      <th>Region</th>
      <th>Address</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roasters.each do |roaster| %>
      <tr>
        <td><%= roaster.name %></td>
        <td><%= roaster.latitude %></td>
        <td><%= roaster.longitude %></td>
        <td><%= roaster.country %></td>
        <td><%= roaster.region %></td>
        <td><%= roaster.address %></td>
        <td><%= roaster.zip %></td>
        <td><%= link_to 'Show', roaster %></td>
        <td><%= link_to 'Edit', edit_roaster_path(roaster) %></td>
        <td><%= link_to 'Destroy', roaster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

