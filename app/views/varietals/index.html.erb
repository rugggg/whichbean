<p id="notice"><%= notice %></p>

<h1>Listing Varietals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Flavour profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @varietals.each do |varietal| %>
      <tr>
        <td><%= varietal.name %></td>
        <td><%= varietal.flavour_profile_id %></td>
        <td><%= link_to 'Show', varietal %></td>
        <td><%= link_to 'Edit', edit_varietal_path(varietal) %></td>
        <td><%= link_to 'Destroy', varietal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

